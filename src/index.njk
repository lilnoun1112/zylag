---
title: Zylag Portfolio
layout: 'base.njk'
---
<main data-barba="container" data-barba-namespace="home">
<div class="nav">
  <a class="nav-item works" href="#works">works</a>
  <a class="nav-item about" href="#about">about</a>
  <a class="nav-item kontakt" href="#kontakt">contact</a>
</div>
<div class="top-blur"></div>
<div class="content">
    <div class="header">
        <div class="column-header-logo">
            <a href="/" class="logo"><img style="width: 48px;" src="images/logo.svg"></a>
        </div>
        <div class="column-header">
            <div class="header-int">
                <div class="header-text">
                    <h1 class="header-text-int hi" >Hi, I'm zylag</h1>
                    <p class="header-text-int desc">Budapest-based designer blending graphic design, UI/UX, and custom development to create intuitive digital experiences. I specialize in turning complex ideas into expressive visuals and clean, functional interfaces.</p>
                </div>
                <div class="header-buttons">
                    <div class="header-buttons-wrap">
                      <div class="button-secondary" data-tag="Web"><span class="button-label">Web</span></div>
                      <div class="button-secondary" data-tag="UIUX"><span class="button-label">UIUX</span></div>
                      <div class="button-secondary" data-tag="Merch"><span class="button-label">Merch</span></div>
                      <div class="button-secondary" data-tag="Logo"><span class="button-label">Logo</span></div>
                      <div class="button-secondary" data-tag="Web3"><span class="button-label">Web3</span></div>
                      <div class="button-secondary" data-tag="Branding"><span class="button-label">Branding</span></div>
                      <div class="button-secondary" data-tag="Frontend"><span class="button-label">Frontend</span></div>
                      <div class="button-secondary" data-tag="Fonts"><span class="button-label">Fonts</span></div>
                      <div class="button-secondary" data-tag="Case study"><span class="button-label">Case study</span></div>
                    </div>
                </div>
            </div>
            <div class="line-header"></div>
        </div>
    </div>
</div>

<section class="section" id="works">
    <div class="column-logo"></div>
    <div class="column-main">
        {% set count = 0 %}
        {%- for post in collections.portfolio | reverse -%}
          {% if count < 1 %}
            <a href="{{ post.url }}" class="article-highlight">
        
              {# === If video-preview is provided === #}
              {% if post.data["video-preview"] %}

                <canvas class="highlight-canvas" data-sprite="/static{{ post.data["video-preview"] }}"></canvas>
        
              {# === Else if image-preview is provided === #}
              {% elif post.data["image-preview"] %}
                <img class="highlight-image" src="/static{{ post.data["image-preview"] }}" alt="Preview for {{ post.data.title }}">
        
              {% endif %}
        
              <div class="textbox highlight">
                <h2>{{ post.data.title }}</h2>
                <div class="label-box">
                    {% if post.data.tags %}
                        {% for tag in post.data.tags %}
                        <div class="label-pill">{{ tag }}</div>
                        {% endfor %}
                    {% endif %}
                </div>
                <p>{{ post.data.preview }}</p>
                <div class="button-primary"><span class="button-label">Read</span></div>
              </div>
        
            </a>
            {% set count = count + 1 %}
          {% endif %}
        {%- endfor -%}
        
        
       {% set posts = collections.portfolio | reverse %}
{% for i in range(0, posts.length, 2) %}
  <div class="spacer">
    <div class="line-top" style="top: -1px;"></div>
    <div class="line-bottom" style="bottom: -1px;"></div>
  </div>

  <div class="article-box">
    {% for j in [0, 1] %}
      {% set post = posts[i + j] %}
      {% if post %}
        <a href="{{ post.url }}" class="article-card">
          {% if post.data["video-preview"] %}
            <canvas class="article-canvas" data-sprite="/static{{ post.data["video-preview"] }}"></canvas>
          {% elif post.data["image-preview"] %}
            <img class="article-image" src="/static{{ post.data["image-preview"] }}" alt="Preview for {{ post.data.title }}">
          {% endif %}

          <h3 class="card-title">{{ post.data.title }}</h3>
          <div class="label-box">
            {% if post.data.tags %}
              {% for tag in post.data.tags %}
                <div class="label-pill">{{ tag }}</div>
              {% endfor %}
            {% endif %}
          </div>
          <p class="card-preview">{{ post.data.preview }}</p>
          <div class="button-primary"><span class="button-label">Read</span></div>
        </a>
      {% endif %}
    {% endfor %}
  </div>


{% endfor %}


    </div>
  </section>

<div class="section">
  <div class="column-logo"></div>
  <div class="column-main static">
    <section id="about">
      <div class="spacer-big" >
        <div class="line-top" style="top: -1px;"></div>
        <div class="line-bottom" style="bottom: -1px;"></div>
      </div>
      <div class="about-card">
        <div class="textbox about">
          <h2 style="margin-bottom: 32px;">Tamás Szilágyi</h2>
          <div class="summary-box">
            <h4 class="summary">Background</h4>
